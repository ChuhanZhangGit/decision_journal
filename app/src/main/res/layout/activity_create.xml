<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:autofillHints="decision"
    tools:context=".CreateActivity">

    <TextView
        android:id="@+id/decision_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="5dp"
        android:text="Decision Comment"
        app:layout_constraintBottom_toTopOf="@+id/input_decision"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/input_decision"
        style="@android:style/Widget.Material.EditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:singleLine="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.32999998" />

    <TextView
        android:id="@+id/cat_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="How's your day ?"
        app:layout_constraintBottom_toTopOf="@+id/decision_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2" />

    <ImageView
        android:id="@+id/cat_icon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/input_decision"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.67"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cat_dialog"
        app:srcCompat="@drawable/cat" />

    <TextView
        android:id="@+id/fast_pick_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:text="Pick your decision"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_decision" />

    <ImageButton
        android:id="@+id/decision_eat"
        android:layout_width="135dp"
        android:layout_height="76dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="#00FFFFFF"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toStartOf="@+id/decision_study"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fast_pick_label"
        app:srcCompat="@drawable/eat" />

    <ImageButton
        android:id="@+id/decision_study"
        android:layout_width="136dp"
        android:layout_height="74dp"
        android:backgroundTint="#00FFFFFF"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/decision_eat"
        app:layout_constraintEnd_toStartOf="@+id/decision_shop"
        app:layout_constraintStart_toEndOf="@+id/decision_eat"
        app:layout_constraintTop_toTopOf="@+id/decision_eat"
        app:srcCompat="@drawable/study" />

    <ImageButton
        android:id="@+id/decision_shop"
        android:layout_width="136dp"
        android:layout_height="67dp"
        android:backgroundTint="#00FFFFFF"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/decision_study"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/decision_study"
        app:layout_constraintTop_toTopOf="@+id/decision_study"
        app:srcCompat="@drawable/shop" />

    <ImageButton
        android:id="@+id/decision_game"
        android:layout_width="135dp"
        android:layout_height="72dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="#00FFFFFF"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toStartOf="@+id/decision_music"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/decision_eat"
        app:srcCompat="@drawable/game" />

    <ImageButton
        android:id="@+id/decision_music"
        android:layout_width="136dp"
        android:layout_height="93dp"
        android:backgroundTint="#00FFFFFF"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/decision_game"
        app:layout_constraintEnd_toStartOf="@+id/decision_workout"
        app:layout_constraintStart_toEndOf="@+id/decision_game"
        app:layout_constraintTop_toTopOf="@+id/decision_game"
        app:srcCompat="@drawable/entertain" />

    <ImageButton
        android:id="@+id/decision_workout"
        android:layout_width="136dp"
        android:layout_height="80dp"
        android:backgroundTint="#00FFFFFF"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/decision_music"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/decision_music"
        app:layout_constraintTop_toTopOf="@+id/decision_music"
        app:srcCompat="@drawable/workout" />

    <Button
        android:id="@+id/emotion_positive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Positive"
        app:layout_constraintEnd_toStartOf="@+id/emotion_neutral"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="564dp" />

    <Button
        android:id="@+id/emotion_neutral"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Neutral"
        app:layout_constraintBottom_toBottomOf="@+id/emotion_positive"
        app:layout_constraintEnd_toStartOf="@+id/emotion_negative"
        app:layout_constraintStart_toEndOf="@+id/emotion_positive"
        app:layout_constraintTop_toTopOf="@+id/emotion_positive" />

    <Button
        android:id="@+id/emotion_negative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Negative"
        app:layout_constraintBottom_toBottomOf="@+id/emotion_neutral"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/emotion_neutral"
        app:layout_constraintTop_toTopOf="@+id/emotion_neutral" />

</androidx.constraintlayout.widget.ConstraintLayout>